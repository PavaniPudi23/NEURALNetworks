# Handwritten Digit Recognition using MNIST Dataset
# Clean and user-input enabled code

import tensorflow as tf
from tensorflow.keras.datasets import mnist
from tensorflow.keras.models import Sequential
from tensorflow.keras.layers import Dense, Flatten
import numpy as np
import matplotlib.pyplot as plt

# 1. Load MNIST Dataset
(x_train, y_train), (x_test, y_test) = mnist.load_data()

# 2. Preprocessing (Normalize)
x_train = x_train / 255.0
x_test = x_test / 255.0

# 3. Build Neural Network Model
model = Sequential([
    Flatten(input_shape=(28, 28)),   # Converts 28x28 → 784
    Dense(128, activation='relu'),
    Dense(10, activation='softmax')  # Output for digits 0–9
])

# 4. Compile Model
model.compile(
    optimizer='adam',
    loss='sparse_categorical_crossentropy',
    metrics=['accuracy']
)

# 5. Train Model
model.fit(x_train, y_train, epochs=5)

# 6. Evaluate on Test Data
test_loss, test_acc = model.evaluate(x_test, y_test)
print("Test Accuracy:", test_acc)

# --------------------------
# USER INPUT SECTION
# --------------------------

# Ask user for index of test image
index = int(input("Enter test image index (0–9999): "))

# Display selected digit
plt.imshow(x_test[index], cmap='gray')
plt.title(f"Actual Digit: {y_test[index]}")
plt.show()

# Prepare the image for prediction
img = x_test[index].reshape(1, 28, 28)

# Predict digit
prediction = model.predict(img)
predicted_digit = np.argmax(prediction)

print("Predicted Digit:", predicted_digit)
print("Actual Digit:", y_test[index])
